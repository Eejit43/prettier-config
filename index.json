{
    "$schema": "https://json.schemastore.org/prettierrc",
    "bracketSameLine": true,
    "endOfLine": "lf",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.hbs", "*.css"],
            "options": { "singleQuote": false }
        }
    ],
    "plugins": ["prettier-plugin-css-order", "prettier-plugin-organize-imports", "prettier-plugin-packagejson"]
}
